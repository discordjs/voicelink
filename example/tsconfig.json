{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "ES2020",
		"lib": ["ESNext"],
		"outDir": "dist",
		"sourceRoot": "./",
		"sourceMap": true,
		"inlineSources": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src"],
	"exclude": ["**/*.test.ts"]
}
